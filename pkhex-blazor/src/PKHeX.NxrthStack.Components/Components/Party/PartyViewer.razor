@using PKHeX.Core
@using PKHeX.NxrthStack.Core.Services
@inject SaveFileService SaveService
@inject PokemonService PokemonService

@namespace PKHeX.NxrthStack.Components.Party

<div class="party-viewer">
    <div class="party-header">
        <h4>Party Pokemon</h4>
        <div class="party-header-actions">
            <span class="party-count">@PokemonService.GetPartyCount() / 6</span>
            @if (PokemonService.GetPartyCount() < 6)
            {
                <button class="btn btn-sm btn-primary add-btn" @onclick="HandleAddClick" title="Add Pokemon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"/>
                        <line x1="5" y1="12" x2="19" y2="12"/>
                    </svg>
                </button>
            }
        </div>
    </div>

    <div class="party-grid">
        @for (int i = 0; i < 6; i++)
        {
            var slot = i;
            var pokemon = GetPartyPokemon(slot);
            <div class="party-slot @(SelectedSlot == slot ? "selected" : "") @(pokemon != null && pokemon.Species > 0 ? "occupied" : "empty")"
                 @onclick="() => HandleSlotClick(slot)">
                @if (pokemon != null && pokemon.Species > 0)
                {
                    <div class="pokemon-sprite">
                        <img src="@GetSpriteUrl(pokemon)" alt="@GetSpeciesName(pokemon)" loading="lazy" />
                        @if (pokemon.IsShiny)
                        {
                            <span class="shiny-indicator">â˜…</span>
                        }
                    </div>
                    <div class="pokemon-info">
                        <span class="species-name">@GetSpeciesName(pokemon)</span>
                        <span class="level">Lv. @pokemon.CurrentLevel</span>
                    </div>
                }
                else
                {
                    <div class="empty-slot">
                        <span class="slot-number">@(slot + 1)</span>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int? SelectedSlot { get; set; }

    [Parameter]
    public EventCallback<PKM?> OnPokemonSelected { get; set; }

    [Parameter]
    public EventCallback<int> OnSlotSelected { get; set; }

    [Parameter]
    public EventCallback OnAddRequested { get; set; }

    private PKM? GetPartyPokemon(int slot)
    {
        return PokemonService.GetPartyPokemon(slot);
    }

    private string GetSpeciesName(PKM pokemon)
    {
        return PokemonService.GetSpeciesName(pokemon);
    }

    private string GetSpriteUrl(PKM pokemon)
    {
        if (pokemon.Species <= 0) return "";
        var shiny = pokemon.IsShiny ? "shiny/" : "";
        return $"https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{shiny}{pokemon.Species}.png";
    }

    private async Task HandleSlotClick(int slot)
    {
        // Use slot-based callback if available, otherwise fall back to pokemon-based
        if (OnSlotSelected.HasDelegate)
        {
            await OnSlotSelected.InvokeAsync(slot);
        }
        else
        {
            var pokemon = GetPartyPokemon(slot);
            await OnPokemonSelected.InvokeAsync(pokemon);
        }
    }

    private async Task HandleAddClick()
    {
        await OnAddRequested.InvokeAsync();
    }
}
